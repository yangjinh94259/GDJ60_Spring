<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
 <mapper namespace="com.iu.s1.board.notice.NoticeDAO">
 
 	<sql id="NoticeCondition">
 		  <where>
 		  	<if test="kind == 'title'">
 		  		TITLE LIKE '%' || #{search} || '%'
 		  	</if>
 		  	
 		  	<if test="kind == 'contents'">
 		  		CONTENTS LIKE '%' || #{search} || '%'
 		  	</if>
 		  	
 		  	<if test="kind == 'writer'">
 		  		WRITER LIKE '%' || #{search} || '%'
 		  	</if>
 		  </where>
 	</sql>
 
   <select id="getTotalCount" resultType="Long" parameterType="Pager">
	   SELECT COUNT(NUM) FROM NOTICE
	   <include refid="NoticeCondition"></include>
   </select>
   
   <select id="getBoardList" resultType="NoticeDTO" parameterType="Pager">
   		SELECT * FROM 
   		(
   			SELECT ROWNUM R, N.* FROM 
		   		(	
		   			SELECT NUM, TITLE, WRITER, REGDATE, HIT FROM NOTICE
		   			<include refid="NoticeCondition"></include>
		   			ORDER BY NUM DESC
		   		) N
   		)
   		WHERE R BETWEEN #{startRow} AND #{lastRow}
   </select>
   
   <select id="getBoardDetail" parameterType="BoardDTO" resultType="NoticeDTO">
   		SELECT * FROM NOTICE WHERE NUM=#{num}
   </select>
   
   <insert id="setBoardAdd" parameterType="BbsDTO">
   		INSERT INTO NOTICE (NUM, TITLE, CONTENTS, WRITER, REGDATE, HIT)
   		VALUES(NOTICE_SEQ.NEXTVAL, #{title}, #{contents}, #{writer}, sysdate, 0)	<!-- 시퀀스 이름 다름 : localhost 일 때 NUM으로 바꿔야함 -->
   </insert>
  
 </mapper>